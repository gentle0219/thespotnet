.row  
  = simple_form_for([:admin, @user], :html=> {class: 'form-horizontal', multipart: true}) do |f|
    = f.error_notification
    .row
      .span6.offset3
        = f.input :name, required: true
        = f.input :email, required: true
        = f.input :password, required: true
        = f.input :password_confirmation, required: true
        = f.input :role, :collection => current_user.get_role_list{|r| [r.capitalize, r]}, include_blank:false
    .row
      .span3.offset6
        = f.button :submit, "Create", class: 'btn btn-primary'
        = link_to "Cancel", admin_users_path, class:'btn btn-default'

